---
network:
  ip: 192.168.1.100
  hostname: pi.loc
  subnet: 192.168.1.0/24
  nameserver: 127.0.0.1

dnscrypt_proxy:
  blocklists:
    - https://raw.githubusercontent.com/notracking/hosts-blocklists/master/dnscrypt-proxy/dnscrypt-proxy.blacklist.txt
    - https://hosts.oisd.nl/basic/
    - https://raw.githubusercontent.com/crazy-max/WindowsSpyBlocker/master/data/dnscrypt/spy.txt
  cloaking_rules:
    - "pi.loc {{ network.ip }}"
    - "navidrome.loc {{ network.ip }}"
  forwarding_rules:
    - "1.168.192.in-addr.arpa 192.168.1.1"

samba:
  share_name: SOME_NAME
  share_path: /mnt/data

minidlna:
  port: 8200
  interface: eth0
  friendly_name: SOME_NAME
  media_dirs:
    - { type: V, path: /mnt/data/Movies }
    - { type: V, path: /mnt/data/Series }
    - { type: V, path: /mnt/data/Tutorials }
    - { type: A, path: /mnt/data/AudioBooks }

navidrome:
  version: 0.47.5
  working_directory: /var/lib/navidrome
  bin_directory: /opt/navidrome
  music_directory: /mnt/data/Music

mount:
  points:
    - { path: /mnt/data, owner: nobody, group: nogroup, mode: "0777" }
